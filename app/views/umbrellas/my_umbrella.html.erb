<div class='page-header'>
  <h1>My Umbrellas</h1>
</div>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Time</th>
      <th>From</th>
      <th>To</th>
      <th></th>
      <th>Actions<th>
    </tr>
  </thead>

  <tbody>
    <% @my_umbrellas.each do |umbrella| %>
      <tr>
        <td><%= umbrella.time.strftime("%B %d, %H:%M")  %></td>
        <td><%= umbrella.address_1 %></td>
        <td><%= umbrella.address_2 %></td>
        <td><%= link_to 'View', umbrella_path(umbrella) %></td>
        <td><%= link_to 'Edit', edit_umbrella_path(umbrella) if umbrella.user_id == current_user.id %></td>
        <td><%= link_to 'Delete', umbrella, method: :delete, data: { confirm: 'Are you sure?' } if umbrella.user_id == current_user.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Umbrella', new_umbrella_path, class: 'btn btn-primary' %>
